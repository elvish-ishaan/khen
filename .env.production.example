# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_USER=khen
DB_PASSWORD=your_secure_password_here
DB_NAME=khen_db
DB_PORT=5432

# API Configuration
API_PORT=4000
JWT_SECRET=your_very_secure_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=7d
CORS_ORIGIN=https://user.yourdomain.com,https://restaurant.yourdomain.com,https://logistics.yourdomain.com

# Frontend Configuration - User App
USER_PORT=3000

# Frontend Configuration - Restaurant App
RESTAURANT_PORT=3001

# Frontend Configuration - Logistics App
LOGISTICS_PORT=3002

# API URL (accessible from all frontend apps)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# MSG91 Configuration (OTP Service)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=your_sender_id
MSG91_TEMPLATE_ID=your_template_id

# Razorpay Configuration (Payment Gateway)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# Google Cloud Storage Configuration
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_BUCKET_NAME=your_bucket_name
GOOGLE_CLOUD_CREDENTIALS=your_service_account_json_credentials

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
