# Server Configuration
NODE_ENV=production
PORT=4000

# Database
DATABASE_URL=your_production_database_url

# JWT
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_change_in_production
JWT_EXPIRES_IN=30d

# CORS - Your production frontend domains (comma-separated)
# For subdomain deployment (all apps on *.dryink.space)
CORS_ORIGINS=https://user.dryink.space,https://restruant.dryink.space,https://logistics.dryink.space

# IMPORTANT: Set COOKIE_DOMAIN for subdomain deployment
# This allows cookies to be shared across all subdomains (user, restruant, logistics)
# The leading dot (.) is important - it means "this domain and all subdomains"
COOKIE_DOMAIN=.dryink.space

# MSG91
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_TEMPLATE_ID=your_template_id
MSG91_SENDER_ID=KHENFD

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Delivery Configuration
COST_PER_KM=10
MIN_DELIVERY_FEE=10
MAX_DELIVERY_DISTANCE=30

# Google Cloud Storage
GCS_ENABLED=true
GCS_PROJECT_ID=your_project_id
GCS_BUCKET_NAME=your_bucket_name
GCS_KEY_FILE=./your-key-file.json
GCS_CDN_URL=https://storage.googleapis.com/your-bucket-name

# File Upload Configuration
MAX_FILE_SIZE=5242880
