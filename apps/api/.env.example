# Server Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://daavat_user:daavat_password@localhost:5432/daavat_db

# JWT
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Firebase Admin SDK (REQUIRED for authentication and push notifications)
# Download service account JSON from: Firebase Console → Project Settings → Service Accounts
FIREBASE_SERVICE_ACCOUNT_KEY=./firebase-service-account.json

# Razorpay (Optional for development)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google Cloud Storage (REQUIRED for all image uploads)
# Set up a Google Cloud Storage bucket and service account
# Download the service account JSON key file and provide the path
GCS_ENABLED=true
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=daavat-uploads
GCS_KEY_FILE=./path/to/service-account-key.json
GCS_CDN_URL=https://cdn.yourdomain.com

# Google Maps API (REQUIRED for delivery fee calculation)
# Get API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Delivery Configuration
COST_PER_KM=10              # Cost per kilometer in INR
MIN_DELIVERY_FEE=20         # Minimum delivery fee in INR
MAX_DELIVERY_DISTANCE=15    # Maximum delivery distance in kilometers

# Frontend URLs (for notification links)
RESTAURANT_APP_URL=http://localhost:3001  # Production: https://restaurant.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
