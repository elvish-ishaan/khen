# Server Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://khen_user:khen_password@localhost:5432/khen_db

# JWT
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# MSG91 (Optional - development mode will use mock OTP: 123456)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_TEMPLATE_ID=your_template_id
MSG91_SENDER_ID=KHENFD

# Razorpay (Optional for development)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google Cloud Storage (REQUIRED for all image uploads)
# Set up a Google Cloud Storage bucket and service account
# Download the service account JSON key file and provide the path
GCS_ENABLED=true
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=khen-uploads
GCS_KEY_FILE=./path/to/service-account-key.json
GCS_CDN_URL=https://cdn.yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
